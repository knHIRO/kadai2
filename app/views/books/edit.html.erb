<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <tr>
  <p><td><%= f.submit 'Update Book' %></td></p>
  <p>
   <td><%= link_to "Show", book_path(@book.id) %></td>
   <td><%= link_to "Back", books_path %></td>
  </p>
</tr>
<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book) do |f| %>

<% end %>